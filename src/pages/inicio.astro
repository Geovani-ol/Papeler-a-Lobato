---
// Importa el layout principal
import Layout from '../layouts/Layout.astro';


---

<Layout>
    <main class="flex-1 p-6 overflow-y-auto m-5 border border-jade-900 rounded-lg">
        <h2 class="text-2xl font-serif mb-4 text-center">Productos Vendidos</h2>
        <table class="table-auto w-full border-collapse border border-jade-700">
            <thead class="bg-jade-300">
                <tr>
                    <th class="border border-jade-100 px-4 py-2">Producto</th>
                    <th class="border border-jade-100 px-4 py-2">Cantidad</th>
                    <th class="border border-jade-100 px-4 py-2">Precio</th>
                    <th class="border border-jade-100 px-4 py-2">Total</th>
                </tr>
            </thead>
            <tbody id="ventas-diarias">
                <!-- Las filas de la tabla se generarán dinámicamente -->
            </tbody>
        </table>
    </main>

    <aside class="hidden lg:block w-96 m-5 ml-0 bg-gradient-to-b from-jade-700 from-60% to-jade-300 border border-jade-100 rounded-lg">
        <div class="p-4">
            <h2 class="text-2xl font-serif mb-10 mt-4 text-center text-white">
                Vender Productos
            </h2>
            <div>
                
            </div>
        </div>
    </aside>
</Layout>